call plug#begin('~/.local/share/nvim/plugged')
" looking
Plug 'mhinz/vim-startify'
Plug 'Yggdroot/indentLine'
Plug 'ryanoasis/vim-devicons'
Plug 'myusuf3/numbers.vim'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'airblade/vim-gitgutter'
Plug 'ianks/gruvbox'
Plug 'altercation/vim-colors-solarized'
" util
Plug 'tpope/vim-sensible'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-fugitive'
Plug 'justincampbell/vim-railscasts'
Plug 'scrooloose/nerdtree'
Plug 'henrik/vim-indexed-search'
" colorschemes
Plug 'nanotech/jellybeans.vim' " jellybeans (dark)
Plug 'andrwb/vim-lapis256' " lapis256 (dark)
Plug 'tomasr/molokai' " molokai (dark)
Plug 'uu59/vim-herokudoc-theme' " herokudoc (dark)

call plug#end()            " required
"
" :Brief help
" :PlugInstall [name ...] [#threads]	- Install plugins
" :PlugUpdate [name ...] [#threads]		- Install plugins
" :PlugClean[!]		- Remove unused directories (bang version will clean without prompt)
" :PlugUpgrade		- Upgrade vim-plug itself
" :PlugStatus		- Check the status of plugins
" :PlugDiff			- Check the status of plugins
" :PlugSnapshot [output path]			- Generate script for restoring the current snapshot of the plugins
"
" see :h vundle for more details or wiki for FAQ
" Put your non-Plugin stuff after this line
"
"

set autoindent
set smartindent
set list lcs=tab:\|\ 
set shiftwidth=4
set tabstop=4
set number
set ruler
set cino=Ls:0t0g0

set enc=utf-8
set tenc=utf-8
set fenc=utf-8
set fencs=utf-8
set ff=unix
set ffs=unix

set hlsearch
set ignorecase
set smartcase
set listchars=tab:>\ ,trail:-,extends:>,precedes:<,nbsp:+,eol:$

set scrolloff=3

set title titlestring=%-.50t\ %m

syntax enable
set background=dark
" let g:solarized_termcolors=256
colorscheme jellybeans
filetype on
filetype plugin on
filetype indent on
set history=500 " colon-command history size
set mouse=a
set hidden


map <F2> :w<CR>
map <F3> :wa<CR>
autocmd Filetype python setlocal expandtab shiftwidth=2
autocmd Filetype markdown setlocal expandtab shiftwidth=2

